<UserControl x:Name="Playlist_Control" x:Class="Equator.Controls.PlaylistContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Equator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="600">
    <Expander Header="Expander" Background="#00647687" BorderBrush="#00647687" Margin="0,0,0,-10" FontSize="20">
        <Grid Background="#66AAAAAA">
            <ScrollViewer HorizontalContentAlignment="Stretch">
                <StackPanel x:Name="Playlist_Content" Height="270" Width="588"/>
            </ScrollViewer>
        </Grid>
    </Expander>
</UserControl>

<UserControl x:Class="Equator.Controls.VolumePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Equator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="250" Height="75" Foreground="Black">
    <Grid Width="250" Height="75" Background="#FF282828">
        <StackPanel HorizontalAlignment="Left" Height="75" VerticalAlignment="Top" Width="250"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="44,30,0,0" Height="20" Width="186"/>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,26,0,0" Foreground="White"/>
        <Label x:Name="Title_Label" Content="Volume" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Foreground="White"/>
        <Button x:Name="button" Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Margin="230,0,0,0" Height="20" Click="button_Click"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="16" VerticalAlignment="Top" Width="16" Margin="51,7,0,0" Source="/Equator;component/Icons/volume.png" Stretch="Fill"/>

    </Grid>
</UserControl>

    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:local="clr-namespace:Equator"
    xmlns:themes="clr-namespace:;assembly=System" x:Name="Login" x:Class="Equator.MainWindow"
    mc:Ignorable="d"
    Title="Login" Height="600" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

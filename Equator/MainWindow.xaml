               Margin="247,510,0,0" Width="103" />
        <Label x:Name="Label1Copy"
               Content="Disclaimer: Eric Zhu is not in any way, shape or form associated with Google"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,541,-13,0" Width="433"

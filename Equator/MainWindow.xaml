<controls:MetroWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    x:Name="Login" x:Class="Equator.MainWindow"
    mc:Ignorable="d"
    Title="Login" Height="600" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid HorizontalAlignment="Left" Height="601" Width="600" Margin="0,0,-6,-30"
          Background="#FF171717">
        <Label x:Name="Label" Content="Welcome!" HorizontalAlignment="Left" Height="45" Margin="232,315,0,0"
               VerticalAlignment="Top" Width="130" FontSize="26.667" Foreground="White" />
        <Image x:Name="Image" HorizontalAlignment="Center" Height="260" Margin="146,40,174,0" VerticalAlignment="Top"
               Width="280" Source="Icons/Equator logo.png" >

        </Image>
        <Button x:Name="Login1" Content="Login" HorizontalAlignment="Left" Height="40" Margin="218,395,0,0"
                VerticalAlignment="Top" Width="152" 
                Click="Login1_Click" FontSize="13.333" controls:ButtonHelper.CornerRadius="0" >
            <Button.Style>
                <Style TargetType="{x:Type Button}"
                       BasedOn="{StaticResource {x:Type Button}}">
                    <Setter Property="Background" Value="Crimson" />
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </Button.Style>
        </Button>
        <Label x:Name="Label1" Content="© 2016 Eric Zhu" HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="232,505,0,0" Width="125" FontSize="16" Foreground="White" />
        <Label x:Name="Label1Copy"
               Content="Disclaimer: Eric Zhu is not in any way, shape or form associated with Google"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="95,536,0,0" Width="445"
               RenderTransformOrigin="0.466,2.115" Foreground="White" />
    </Grid>

</controls:MetroWindow>
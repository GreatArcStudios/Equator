<Controls:MetroWindow
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Equator"
        xmlns:BlendModeEffectLibrary="clr-namespace:BlendModeEffectLibrary;assembly=BlendModeEffectLibrary"
        xmlns:global1="clr-namespace:Equator.Helpers.Background"
        xmlns:interactivity="http://schemas.microsoft.com/expression/2010/interactivity"
        x:Class="Equator.MusicPanel"
        mc:Ignorable="d"
        Title="Window1" Height="899.4" Width="1440">
    <Controls:MetroWindow.Resources>
        <Storyboard x:Key="sbShowLeftMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-220,0,0,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
        <Storyboard x:Key="sbHideLeftMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="-220,0,0,0" AccelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
    </Controls:MetroWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="630*"/>
            <RowDefinition Height="165*"/>
            <RowDefinition Height="73*"/>
        </Grid.RowDefinitions>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60"
			Margin="344,14,0,0" Height="50" Click="button_Click" />
        <TextBox x:Name="Searchfield" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="TextBox"
			VerticalAlignment="Top" Width="190" Margin="134,30,0,0" />
        <MediaElement x:Name="VideoPlayer" HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="302"
			Margin="1103,565,0,0" LoadedBehavior="Manual" Volume="2" OpacityMask="Black" Grid.RowSpan="2" />
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="221"
			Margin="74,75,0,0" Height="50" Click="button1_Click" Grid.Row="1" />
        <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="195"
			Margin="905,131,0,0" Height="54" Click="button2_Click" Grid.RowSpan="2" Grid.Row="1" />
        <StackPanel x:Name="Nav_Panel" HorizontalAlignment="Left" Height="878" Width="380" Margin="-505,-18,0,8" Background="Black" Panel.ZIndex="-1" Grid.RowSpan="3">
            <StackPanel.Effect>
                <BlurEffect/>
            </StackPanel.Effect>
            <Label x:Name="label" Content="Search" HorizontalAlignment="Left" VerticalAlignment="Top" Height="55" Width="200" Foreground="White"/>

            <Grid Height="885" VerticalAlignment="Top">

                <Button x:Name="Hide_Button" Content="Hide" HorizontalAlignment="Left" Margin="220,-55,0,0" VerticalAlignment="Top" Width="160" Height="80" Click="Hide_Button_Click"/>
                <Button x:Name="Show_Button" VerticalAlignment="Center" Width="160" Height="80" Margin="0,-55,0,860" HorizontalAlignment="Right" Click="Show_Button_Click" Content="Show"/>
            </Grid>
        </StackPanel>
        <Button x:Name="User_login" Content="Userlogin" HorizontalAlignment="Left" Height="50" Margin="10,14,0,0" VerticalAlignment="Top" Width="75" Click="User_login_Click"/>
        <Image x:Name="Equator_Concept_12_31_16_png" Margin="-1710,30,1634,-10" Source="Equator Concept 12-31-16.png" Stretch="Fill" Grid.RowSpan="3"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="If I lose myself" VerticalAlignment="Top" Margin="-759,495,0,0" Foreground="White" FontSize="33.333">
            <TextBlock.Effect>
                <DropShadowEffect/>

            </TextBlock.Effect>
        </TextBlock>
        <Rectangle x:Name="Background" HorizontalAlignment="Right" Height="1070" Margin="-120,-55,-103,-147" Stroke="Black" VerticalAlignment="Top" Width="1655" Grid.RowSpan="3">
            <Rectangle.Effect>
                <BlurEffect Radius="50"/>
            </Rectangle.Effect>
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/Onerepublic.png"/>
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle HorizontalAlignment="Left" Height="73" Grid.Row="2" VerticalAlignment="Top" Width="1525" Fill="#FFAEAEAE" Margin="-50,0,-43,0">
            <interactivity:Interaction.Behaviors>
                <global1:BackgroundEffectBehavior  Visual="{Binding ElementName= Background, Mode=OneWay}">
                    <global1:BackgroundEffectBehavior.Effect>

                        <BlendModeEffectLibrary:OverlayEffect/>

                    </global1:BackgroundEffectBehavior.Effect>
                </global1:BackgroundEffectBehavior>
            </interactivity:Interaction.Behaviors>

        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="73" VerticalAlignment="Top" Width="1525" Fill="#FF444444" Margin="-50,0,-43,0">
            <interactivity:Interaction.Behaviors>
                <global1:BackgroundEffectBehavior  Visual="{Binding ElementName=Background, Mode=OneWay}">
                    <global1:BackgroundEffectBehavior.Effect>

                        <BlendModeEffectLibrary:OverlayEffect/>

                    </global1:BackgroundEffectBehavior.Effect>
                </global1:BackgroundEffectBehavior>
            </interactivity:Interaction.Behaviors>

        </Rectangle>


    </Grid>
</Controls:MetroWindow>